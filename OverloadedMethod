public void CheckStats(Integer[] abilityArray1) {
	    // display array elements
	    for (int i = 0; i < abilityArray1.length; i++ ) {
	    	if (i > 0) {
	            System.out.print(", ");
	         }
	         System.out.print(abilityArray1[i]);
		}

	    System.out.println();
	  }
	
	public void CheckStats(Integer[] abilityArray1, Integer[] abilityArray2) {
	    // display array elements
	    for (int i = 0; i < abilityArray1.length; i++ ) {
	    	if (i > 0) {
	            System.out.print(", ");
	         }
	         System.out.print(abilityArray1[i]);
		}
	    System.out.println();
	    System.out.println("Leadership, Charm, Confidence");
	    for (int i = 0; i < abilityArray2.length; i++ ) {
	    	if (i > 0) {
	            System.out.print(", ");
	         }
	         System.out.print(abilityArray2[i]);
		}
	    System.out.println();
	    
	  }
	/*
	NOTES ON THE METHOD
